- @page_title = "Readme for #{@repository.name}"

%style{:type => "text/css"}
  :sass
    #readme
      :font-size 75%
      :background-color #fff
      :padding 5px
      :line-height 1.3em
      
      > *
        :margin-left 10px
        :margin-right 10px
        
    .return
      :float right
      a
        :color #000
        
    body > h2
      :margin-left 12px
      
    body > h2, .return a
      :color #980
      
    code
      :background-color #fff
      :font-size 12px
      :color #666
  
%p.return
  %a{:href => "/"} Return to repositories

%h2
  Readme for
  = @repository.name

#readme
  - if @rendered_readme
    :preserve
      #{@rendered_readme}
  - else
    %pre
      :preserve
        #{@plain_readme}

